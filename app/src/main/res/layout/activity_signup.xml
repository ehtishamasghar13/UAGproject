<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="#D6CECE"
    android:padding="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#050505"
            android:gravity="end"
            android:textSize="15dp"

            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Create Your Account"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Your Name"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="#B8AEAE"
            android:elevation="5dp"
            android:background="@drawable/btn"

            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="#B8AEAE"
            android:elevation="5dp"
            android:background="@drawable/btn"

            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="#B8AEAE"
            android:elevation="5dp"
            android:background="@drawable/btn"

            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Confirm Password"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="#B8AEAE"
            android:elevation="5dp"
            android:background="@drawable/btn"

            />
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:id="@+id/joinus"
            android:text="Join Us"
            android:textColor="#171414"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:onClick="gotoNext"
            android:background="@drawable/joinbtn"
            tools:ignore="OnClick" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="By Pressing Join us Button you are agree to our Terms and Conditions"
            android:textColor="#605F5F"
            android:layout_marginTop="20dp"

            />
    </LinearLayout>
</LinearLayout>